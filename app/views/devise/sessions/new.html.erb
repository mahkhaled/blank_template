<h2><%= t("login.sign_in") %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="field_with_errors">
    <label class="wide message"><%= t("devise.failure.invalid") %></label>
  </div>
  
  <div class="field"><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div class="field"><%= f.label :password %>
  <%= f.password_field :password %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="field"><%= f.label :remember_me %><%= f.check_box :remember_me %></div>
  <% end -%>

  <div class="actions"><%= f.submit t("login.submit") %></div>
<% end %>

<div class="actions">
<%= render :partial => "devise/shared/links" %>
</div>