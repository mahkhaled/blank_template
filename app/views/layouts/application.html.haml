          = javascript_include_tag :application, "jquery.url", "rails.validations", 'jquery-ui-1.8.16.custom.min', "colorbox/jquery.colorbox"
          
          :javascript
            $(function() {
              $(".filter").click(function(){
                $(".panel").slideToggle("slow");
              });
            });
    
  %body
    .header
      .content
    .space
    .content
      = yield
    .footer